choice=input("enter choice from 1/2/3/4 for operations :")
num1=int(input("enter number 1 :"))
num2=int(input("enter number 2 :"))
sum=num1+num2
difference=num1-num2
multiply=num1*num2
divide=num1/num2
if (choice=='1'):
         print("you have choosed addition and the answer=",sum)
elif (choice=='2'):
    print("you have choosed substraction and the answer=",difference)
elif (choice=='3'):
    print("you have choosed multiply and the answer=",multiply)
elif (choice == '4'):
            if num2 == 0:
                print("Error! Division by zero is not allowed.")
            else:
                print("you have choosed divide and the answer=",divide)
else:
    print("Invalid input, please select a valid operation.")
         
    
